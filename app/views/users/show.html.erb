<p id="notice"><%= notice %></p>
<div>
  <h2 class="text-center"><%= @user.name %></h2>
  <h5 class="text-center"><%= @user.email %></h5>
</div>


<% if current_user and current_user != @user %>
 <%= link_to "Follow", follow_path(@user), remote: true, class: "myfoll btn btn-primary #{'hide' if @following}" %>
 <%= link_to "Un-Follow", unfollow_path(@user), remote: true, class: "unfoll btn btn-danger #{'hide' unless @following}" %>
<% end %>
<hr />
<div>
  <h5 class="text-center"><%= @user.name %>'s Articles</h5>
  <table style="width:100%">
    <thead>
      <tr>
        <th>
          Title
        </th>
        <th>
          Intro
        </th>
        <th>
          Read More...
        </th>
      </tr>
    </thead>
    <tbody>
     <% @articles.each do |article| %>
          <tr>
               <td><%= article.title %></td>
               <td><%= raw(article.body).truncate(50) %></td>
               <td>
                 <%= link_to "READ MORE", article_path(article) %>
               </td>
          </tr>
     <% end %>
</tbody>
  </table>
</div>
<%= link_to 'Back', root_path %>
