<% cache author do %>
<li>
  <%= gravatar_for author, size: 50 %>
  <%= link_to author.name, author %>
  <% if current_author&.admin? && !current_author?(author) %>
      | <%= link_to 'delete', author, method: :delete,
                    data: { confirm: 'You sure?' } %>
  <% end %>
</li>
<% end %>