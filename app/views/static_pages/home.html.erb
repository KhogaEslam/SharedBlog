
<div class="center jumbotron">
  <h1>Welcome to the SharedBlog</h1>

  <h2>
    This is the home page for the
    <a href="#">SharedBlog</a>
    sample application.
  </h2>
  <% if logged_in? %>
      <%= link_to 'Read All Articles!', articles_path, class: 'btn btn-lg btn-primary' %>
  <% else %>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
  <% end %>
</div>

<% if @feed_items.any? %>
    <div class="row">
      <% cache @feed_items do %>
          <% @feed_items.each do |article| -%>
              <% cache article do %>
                  <%= render 'feed', :article => article %>
              <% end %>
          <% end %>
      <% end %>
    </div>
<% end %>