<h3>Add New Article</h3>
<%= simple_form_for(@article) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_field :title, placeholder: 'Choose article\'s title'  %>
    </div>
    <div class="field">
      <%= f.input :content, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, class: 'form-control' %>
    </div>
    <%= f.submit 'Done', class: 'btn btn-primary' %>
    <span class="default_picture">
      <%= f.file_field :default_picture, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
<% end %>

<script type="text/javascript">
    $('#article_default_picture').bind('change', function() {
        var size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
            alert('Maximum file size is 5MB. Please choose a smaller file.');
        }
    });
</script>